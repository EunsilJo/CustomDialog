<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Translucent_NoActionBar" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- Dialog Styles-->
    <style name="CustomDialogTheme" parent="AppTheme.Translucent_NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="dialogPaddingDefault">
        <item name="android:minHeight">@dimen/common_dialog_min_height</item>
        <item name="android:paddingTop">@dimen/common_dialog_margin</item>
        <item name="android:paddingBottom">@dimen/common_dialog_margin</item>
        <item name="android:paddingLeft">@dimen/common_margin</item>
        <item name="android:paddingRight">@dimen/common_margin</item>
    </style>

    <style name="dialogItemPaddingDefault">
        <item name="android:paddingTop">@dimen/common_margin_small</item>
        <item name="android:paddingBottom">@dimen/common_margin_small</item>
        <item name="android:paddingLeft">@dimen/common_dialog_margin_left</item>
        <item name="android:paddingRight">@dimen/common_margin_small</item>
    </style>

    <!--Text Styles-->
    <style name="textMicro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_micro</item>
    </style>
    <style name="textMicro.bold" parent="textMicro">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="textSmall.bold" parent="textSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <style name="textMedium.bold" parent="textMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="textLarge.bold" parent="textLarge">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
